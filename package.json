{
  "name": "ajdr",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node --env-file=.env dist/index.js",
    "dev": "tsx --watch index.ts",
    "start:prod": "npm run db:migrate:deploy && node dist/index.js",
    "start:dev": "npm run db:migrate:deploy && npm run dev",
    "lint": "npx eslint \"**/*.{js,mjs,cjs,ts,mts,cts,jsx,tsx}\"",
    "db:seed": "prisma db seed",
    "db:generate": "prisma generate --schema=./prisma/schema.prisma",
    "db:migrate:deploy": "prisma migrate deploy --schema=./prisma/schema.prisma",
    "db:migrate:dev": "prisma migrate dev --schema=./prisma/schema.prisma --name auto",
    "db:migrate:reset": "prisma migrate reset --force --schema=./prisma/schema.prisma",
    "db:studio": "prisma studio --schema=./prisma/schema.prisma",
    "docker:db:seed": "docker exec -it ajdr-api npm run db:seed",
    "docker:db:reset": "docker exec -it ajdr-api npm run db:migrate:reset",
    "docker:db:migrate:dev": "docker exec -it ajdr-api npm run db:migrate:dev",
    "docker:db:generate": "docker exec -it ajdr-api npm run db:generate"
  },
  "keywords": [],
  "author": "aurelien.genois@gmail.com",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/debug": "^4.1.12",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.7.0",
    "@types/nodemailer": "^7.0.1",
    "@types/sanitize-html": "^2.16.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.35.0",
    "globals": "^16.4.0",
    "prisma": "^7.0.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.0"
  },
  "dependencies": {
    "@faker-js/faker": "^10.0.0",
    "@prisma/adapter-pg": "^7.0.1",
    "@prisma/client": "^7.0.1",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "debug": "^4.4.3",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.6",
    "sanitize-html": "^2.17.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^13.0.0",
    "zod": "^4.1.8"
  },
  "prettier": {
    "singleQuote": false
  }
}
