{
  "name": "ajdr",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node --env-file=.env dist/index.js",
    "dev": "tsx --watch index.ts",
    "start:prod": "pnpm db:migrate:deploy && node dist/index.js",
    "start:dev": "pnpm db:migrate:deploy && pnpm dev",
    "lint": "npx eslint \"**/*.{js,mjs,cjs,ts,mts,cts,jsx,tsx}\"",
    "db:seed": "prisma db seed",
    "db:generate": "prisma generate --schema=./prisma/schema.prisma",
    "db:migrate:deploy": "prisma migrate deploy --schema=./prisma/schema.prisma",
    "db:migrate:dev": "prisma migrate dev --schema=./prisma/schema.prisma --name auto",
    "db:migrate:reset": "prisma migrate reset --force --schema=./prisma/schema.prisma",
    "db:studio": "prisma studio --schema=./prisma/schema.prisma",
    "docker:db:seed": "docker exec -it ajdr-api pnpm db:seed",
    "docker:db:reset": "docker exec -it ajdr-api pnpm db:migrate:reset",
    "docker:db:migrate:dev": "docker exec -it ajdr-api pnpm db:migrate:dev",
    "docker:db:generate": "docker exec -it ajdr-api pnpm db:generate",
    "test:unit": "tsx --test ./**/*.unit.test.ts",
    "test:unit:only": "tsx --test --test-only ./**/*.unit.test.ts"
  },
  "keywords": [],
  "author": "aurelien.genois@gmail.com",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/debug": "^4.1.12",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.10.4",
    "@types/nodemailer": "^7.0.4",
    "@types/sanitize-html": "^2.16.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0"
  },
  "dependencies": {
    "@faker-js/faker": "^10.2.0",
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "debug": "^4.4.3",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "morgan": "^1.10.1",
    "nodemailer": "^7.0.12",
    "prisma": "^7.2.0",
    "sanitize-html": "^2.17.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^13.0.0",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^4.3.5",
    "zx": "^8.8.5"
  },
  "prettier": {
    "singleQuote": false
  }
}
